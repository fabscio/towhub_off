<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="5.0" style="-fx-background-color: #ecf0f1;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.OrdemServicoController">

  <padding>
    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
  </padding>

  <Label text="Nova Ordem de Serviço" textFill="#2c3e50">
    <font> <Font name="System Bold" size="20.0" /> </font>
  </Label>

  <TitledPane animated="false" collapsible="false" text="Dados da Operação">
    <content>
      <GridPane hgap="10.0" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" minWidth="85.0" />
          <ColumnConstraints hgrow="ALWAYS" />
          <ColumnConstraints minWidth="15.0" />
          <ColumnConstraints halignment="RIGHT" minWidth="85.0" />
          <ColumnConstraints hgrow="ALWAYS" />
          <ColumnConstraints minWidth="15.0" />
          <ColumnConstraints halignment="RIGHT" minWidth="85.0" />
          <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <children>
          <Label text="ID O.S.:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
          <TextField fx:id="txtId" disable="true" text="Auto" GridPane.columnIndex="1" GridPane.rowIndex="0" />

          <Label text="Data:" GridPane.columnIndex="3" GridPane.rowIndex="0" />
          <DatePicker fx:id="dtData" maxWidth="Infinity" GridPane.columnIndex="4" GridPane.rowIndex="0" />

          <Label text="Solicitação:" GridPane.columnIndex="6" GridPane.rowIndex="0" />
          <ComboBox fx:id="cbSolicitacao" maxWidth="Infinity" GridPane.columnIndex="7" GridPane.rowIndex="0" />

          <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
          <ComboBox fx:id="cbCliente" maxWidth="Infinity" promptText="Selecione..." GridPane.columnIndex="1" GridPane.rowIndex="1" />

          <Label text="Contato:" GridPane.columnIndex="3" GridPane.rowIndex="1" />
          <TextField fx:id="txtContato" promptText="(XX) 99..." GridPane.columnIndex="4" GridPane.rowIndex="1" />

          <Label text="Base:" GridPane.columnIndex="6" GridPane.rowIndex="1" />
          <ComboBox fx:id="cbBase" maxWidth="Infinity" promptText="Selecione..." GridPane.columnIndex="7" GridPane.rowIndex="1" />

          <Label text="Veículo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
          <TextField fx:id="txtVeiculo" promptText="Modelo" GridPane.columnIndex="1" GridPane.rowIndex="2" />

          <Label text="Placa:" GridPane.columnIndex="3" GridPane.rowIndex="2" />
          <TextField fx:id="txtPlaca" promptText="ABC-1234" GridPane.columnIndex="4" GridPane.rowIndex="2" />

          <Label text="Prazo (h):" GridPane.columnIndex="6" GridPane.rowIndex="2" />
          <TextField fx:id="txtPrazo" promptText="0" GridPane.columnIndex="7" GridPane.rowIndex="2" />

          <Label text="Motorista:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
          <ComboBox fx:id="cbMotorista" maxWidth="Infinity" promptText="Selecione..." GridPane.columnIndex="1" GridPane.rowIndex="3" />

          <Label text="Analista:" GridPane.columnIndex="3" GridPane.rowIndex="3" />
          <ComboBox fx:id="cbAnalista" maxWidth="Infinity" promptText="Selecione..." GridPane.columnIndex="4" GridPane.rowIndex="3" />

          <Label text="Pagamento:" GridPane.columnIndex="6" GridPane.rowIndex="3" />
          <ComboBox fx:id="cbPagamento" maxWidth="Infinity" promptText="Selecione..." GridPane.columnIndex="7" GridPane.rowIndex="3" />

          <Label text="Origem:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
          <TextField fx:id="txtOrigem" promptText="Endereço de retirada" GridPane.columnIndex="1" GridPane.rowIndex="4" />

          <Label text="Destino:" GridPane.columnIndex="3" GridPane.rowIndex="4" />
          <TextField fx:id="txtDestino" promptText="Endereço de entrega" GridPane.columnIndex="4" GridPane.rowIndex="4" />

        </children>
      </GridPane>
    </content>
  </TitledPane>

  <TitledPane animated="false" collapsible="false" text="Serviços e Valores" VBox.vgrow="ALWAYS" maxHeight="Infinity">
    <content>
      <HBox spacing="10.0">
        <children>
          <TableView fx:id="tabelaServicos" HBox.hgrow="ALWAYS">
            <columns>
              <TableColumn fx:id="colServico" prefWidth="250.0" text="Serviço Prestado" />
              <TableColumn fx:id="colQtd" prefWidth="60.0" style="-fx-alignment: CENTER;" text="Qtd" />
              <TableColumn fx:id="colValor" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="V. Unit." />
              <TableColumn fx:id="colSubtotal" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Subtotal" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>

          <VBox alignment="TOP_CENTER" minWidth="140.0" spacing="8.0">
            <children>
              <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleAdicionarServico"
                      style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-cursor: hand;" text="Adicionar (+)" />

              <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleRemoverServico"
                      style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;" text="Remover (-)" />

              <Separator>
                <VBox.margin> <Insets top="5.0" /> </VBox.margin>
              </Separator>

              <Label text="TOTAL">
                <font> <Font size="10.0" /> </font>
              </Label>
              <Label fx:id="lblValorTotal" text="R$ 0,00" textFill="#2c3e50">
                <font> <Font name="System Bold" size="18.0" /> </font>
              </Label>

              <Separator>
                <VBox.margin> <Insets bottom="5.0" /> </VBox.margin>
              </Separator>

              <Region VBox.vgrow="ALWAYS" />

              <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleConcluir" prefHeight="35.0"
                      style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;" text="CONCLUIR OS">
                <font> <Font name="System Bold" size="12.0" /> </font>
              </Button>
            </children>
          </VBox>
        </children>
      </HBox>
    </content>
  </TitledPane>
</VBox>
