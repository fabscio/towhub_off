<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EmployeeController">
    <padding> <Insets bottom="30" left="30" right="30" top="30" /> </padding>

    <Label text="Cadastro de Funcionário" textFill="#2c3e50">
        <font> <Font name="System Bold" size="24.0" /> </font>
    </Label>

    <TitledPane collapsible="false" text="Dados Pessoais e Contratuais">
        <content>
            <GridPane hgap="15.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField text="Auto" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="CPF:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtCpf" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="Nome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNome" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Sobrenome:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="txtSobrenome" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                
                <Label text="Telefone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTelefone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Endereço:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="txtEndereco" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <Label text="Carga Horária:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCarga" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Salário Base:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <TextField fx:id="txtSalario" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                <Separator GridPane.rowIndex="4" GridPane.columnSpan="4"/>

                <Label text="Função:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbFuncao" maxWidth="Infinity" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label fx:id="lblCnh" text="CNH:" visible="false" managed="false" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
                <TextField fx:id="txtCnh" visible="false" managed="false" GridPane.rowIndex="5" GridPane.columnIndex="3"/>

                <Label fx:id="lblCat" text="Categoria:" visible="false" managed="false" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
                <ComboBox fx:id="cbCategoria" maxWidth="Infinity" visible="false" managed="false" GridPane.rowIndex="6" GridPane.columnIndex="3"/>
            </GridPane>
        </content>
    </TitledPane>
    <Button text="Salvar Funcionário" onAction="#handleSalvar" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>
