<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="550.0" minWidth="400.0"
            prefHeight="550.0" prefWidth="400.0"
            style="-fx-background-color: #f0f2f5;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.LoginController">

  <children>
    <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="35.0" prefHeight="480.0" prefWidth="300.0"
          spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);"
          AnchorPane.bottomAnchor="35.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="35.0">

      <children>
        <VBox alignment="CENTER" spacing="5.0">
          <children>
            <Label text="TOW HUB" textFill="#2c3e50">
              <font> <Font name="System Bold" size="28.0" /> </font>
            </Label>
            <Label text="Acesso ao Sistema" textFill="#7f8c8d">
              <font> <Font size="15.0" /> </font>
            </Label>
          </children>
          <VBox.margin> <Insets bottom="20.0" top="10.0" /> </VBox.margin>
        </VBox>

        <VBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="5.0">
          <children>
            <Label text="CPF do Usuário" textFill="#34495e">
              <font> <Font name="System Bold" size="12.0" /> </font>
            </Label>
            <TextField fx:id="txtCpf" promptText="000.000.000-00" style="-fx-background-radius: 5; -fx-padding: 10;">
              <font> <Font size="14.0" /> </font>
            </TextField>
            <Label fx:id="lblMensagem" text="Aguardando identificação..." textFill="#2980b9" wrapText="true">
              <font> <Font name="System Italic" size="12.0" /> </font>
            </Label>
          </children>
        </VBox>

        <VBox alignment="CENTER_LEFT" maxWidth="Infinity" spacing="5.0">
          <children>
            <Label text="Senha" textFill="#34495e">
              <font> <Font name="System Bold" size="12.0" /> </font>
            </Label>
            <PasswordField fx:id="txtSenha" promptText="••••••••" style="-fx-background-radius: 5; -fx-padding: 10;">
              <font> <Font size="14.0" /> </font>
            </PasswordField>
          </children>
          <VBox.margin> <Insets top="5.0" /> </VBox.margin>
        </VBox>

        <Button fx:id="btnEntrar" defaultButton="true" maxWidth="Infinity" mnemonicParsing="false"
                onAction="#acaoEntrar"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;"
                text="ENTRAR">
          <font> <Font name="System Bold" size="14.0" /> </font>
          <padding> <Insets bottom="12.0" top="12.0" /> </padding>
          <VBox.margin> <Insets top="20.0" /> </VBox.margin>
        </Button>

      </children>
      <padding> <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /> </padding>
    </VBox>
  </children>
</AnchorPane>
