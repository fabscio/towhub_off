<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15.0" style="-fx-background-color: #ecf0f1;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ContasPagarController">

  <padding>
    <Insets bottom="20" left="20" right="20" top="20" />
  </padding>

  <Label text="Nova Conta a Pagar (Compra)" textFill="#2c3e50">
    <font> <Font name="System Bold" size="24.0" /> </font>
  </Label>

  <TitledPane collapsible="false" text="Dados do Pedido de Compra">
    <content>
      <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" minWidth="120.0" /> <ColumnConstraints hgrow="ALWAYS" />
          <ColumnConstraints halignment="RIGHT" minWidth="120.0" /> <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="ID Pedido:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField text="Auto (BD)" disable="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Data da Compra:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <DatePicker fx:id="dtCompra" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Base (Filial):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbBase" maxWidth="Infinity" promptText="Selecione..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Fornecedor:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbFornecedor" maxWidth="Infinity" promptText="Selecione..." GridPane.rowIndex="1" GridPane.columnIndex="3"/>
      </GridPane>
    </content>
  </TitledPane>

  <TitledPane collapsible="false" text="Parcelamento" VBox.vgrow="ALWAYS" maxHeight="Infinity">
    <content>
      <HBox spacing="20.0">
        <TableView fx:id="tabelaParcelas" HBox.hgrow="ALWAYS">
          <columns>
            <TableColumn fx:id="colIdParcela" prefWidth="150.0" text="ID Parcela" />
            <TableColumn fx:id="colVencimento" prefWidth="150.0" text="Vencimento" />
            <TableColumn fx:id="colValor" prefWidth="150.0" text="Valor (R$)" style="-fx-alignment: CENTER-RIGHT;"/>
          </columns>
          <columnResizePolicy> <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> </columnResizePolicy>
        </TableView>

        <VBox spacing="10.0" minWidth="200.0">
          <Label text="Adicionar Parcela" style="-fx-font-weight: bold;"/>

          <Label text="Valor da Parcela:"/>
          <TextField fx:id="txtValorParcela" promptText="0.00" />

          <Label text="Data Vencimento:"/>
          <DatePicker fx:id="dtVencimentoParcela" maxWidth="Infinity"/>

          <Button text="Adicionar Parcela" onAction="#acaoAdicionarParcela" maxWidth="Infinity"
                  style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-cursor: hand;"/>

          <Button text="Remover Selecionada" onAction="#acaoRemoverParcela" maxWidth="Infinity"
                  style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;"/>

          <Separator />

          <Label text="TOTAL DO PEDIDO">
             <font> <Font size="12.0" /> </font>
          </Label>
          <Label fx:id="lblTotal" text="R$ 0,00" textFill="#2980b9">
             <font> <Font name="System Bold" size="24.0" /> </font>
          </Label>

          <Region VBox.vgrow="ALWAYS"/>
          <Button text="FINALIZAR COMPRA" onAction="#acaoSalvar" maxWidth="Infinity" prefHeight="40"
                  style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </VBox>
      </HBox>
    </content>
  </TitledPane>
</VBox>
