<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15.0" style="-fx-background-color: #ecf0f1;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.RelatorioRecebimentosController">

  <padding> <Insets bottom="20" left="20" right="20" top="20" /> </padding>

  <Label text="Relatório de Recebimentos" textFill="#2c3e50">
    <font> <Font name="System Bold" size="24.0" /> </font>
  </Label>

  <TitledPane collapsible="false" text="Filtros de Pesquisa">
    <content>
      <VBox spacing="15.0">
        <GridPane hgap="15.0" vgap="15.0">
          <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100.0" /> <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints halignment="RIGHT" minWidth="100.0" /> <ColumnConstraints hgrow="ALWAYS" />
          </columnConstraints>

          <Label text="Base:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
          <ComboBox fx:id="cbBase" maxWidth="Infinity" promptText="Todas" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

          <Label text="Período:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
          <HBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="3">
            <DatePicker fx:id="dtInicio" maxWidth="Infinity" promptText="De"/>
            <DatePicker fx:id="dtFim" maxWidth="Infinity" promptText="Até"/>
          </HBox>

          <Label text="Cliente:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
          <ComboBox fx:id="cbCliente" maxWidth="Infinity" promptText="Todos" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

          <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
          <ComboBox fx:id="cbStatus" maxWidth="Infinity" promptText="Todos" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
           <Button text="Limpar" onAction="#acaoLimpar" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
           <Button text="PESQUISAR" onAction="#acaoPesquisar" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="120"/>
        </HBox>
      </VBox>
    </content>
  </TitledPane>

  <TableView fx:id="tabelaResultados" VBox.vgrow="ALWAYS">
    <columns>
      <TableColumn fx:id="colId" prefWidth="100.0" text="ID Lote" />
      <TableColumn fx:id="colCliente" prefWidth="250.0" text="Cliente" />
      <TableColumn fx:id="colVencimento" prefWidth="120.0" text="Vencimento" />
      <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
      <TableColumn fx:id="colValor" prefWidth="120.0" text="Valor" style="-fx-alignment: CENTER-RIGHT;"/>
    </columns>
    <columnResizePolicy> <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> </columnResizePolicy>
  </TableView>

  <HBox alignment="CENTER_RIGHT">
    <Label text="Total Recebimentos: "/>
    <Label fx:id="lblTotal" text="R$ 0,00" textFill="#27ae60">
       <font> <Font name="System Bold" size="18.0" /> </font>
    </Label>
  </HBox>
</VBox>
