<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportOSController">
    <padding> <Insets bottom="20" left="20" right="20" top="20" /> </padding>

    <Label text="Relatório de Ordens de Serviço" textFill="#2c3e50">
        <font> <Font name="System Bold" size="24.0" /> </font>
    </Label>

    <TitledPane collapsible="false" text="Filtros de Pesquisa">
        <content>
            <VBox spacing="15.0">
                <GridPane hgap="15.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="Base:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbBase" maxWidth="Infinity" promptText="Todas" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Período De:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                    <DatePicker fx:id="dtInicio" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                    
                    <Label text="Até:" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                    <DatePicker fx:id="dtFim" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="5"/>

                    <Label text="Cliente:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbCliente" maxWidth="Infinity" promptText="Todos" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Motorista:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <ComboBox fx:id="cbMotorista" maxWidth="Infinity" promptText="Todos" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                    <Label text="Veículo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtVeiculo" promptText="Modelo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Placa:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                    <TextField fx:id="txtPlaca" promptText="ABC-1234" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <Button text="Limpar Filtros" onAction="#handleLimpar" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand;"/>
                     <Button text="PESQUISAR" onAction="#handlePesquisar" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" prefWidth="120"/>
                </HBox>
            </VBox>
        </content>
    </TitledPane>

    <TableView fx:id="tabelaResultados" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="colData" prefWidth="100.0" text="Data" />
            <TableColumn fx:id="colCliente" prefWidth="200.0" text="Cliente" />
            <TableColumn fx:id="colMotorista" prefWidth="150.0" text="Motorista" />
            <TableColumn fx:id="colVeiculo" prefWidth="150.0" text="Veículo" />
            <TableColumn fx:id="colValor" prefWidth="120.0" text="Valor Total" style="-fx-alignment: CENTER-RIGHT;"/>
        </columns>
        <columnResizePolicy> <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /> </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label text="Total Geral:"/>
        <Label fx:id="lblTotalGeral" text="R$ 0,00" textFill="#2980b9">
            <font> <Font name="System Bold" size="18.0" /> </font>
        </Label>
    </HBox>
</VBox>
