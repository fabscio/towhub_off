<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" style="-fx-background-color: #ecf0f1;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ServicoController">

  <padding>
    <Insets bottom="30" left="30" right="30" top="30" />
  </padding>

  <Label text="Cadastro de Serviço" textFill="#2c3e50">
    <font> <Font name="System Bold" size="24.0" /> </font>
  </Label>

  <TitledPane collapsible="false" text="Detalhes do Serviço">
    <content>
      <GridPane hgap="15.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
          <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField text="Auto" disable="true" maxWidth="100.0"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nome do Serviço:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNome" promptText="Ex: Guincho Leve"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Valor Padrão (R$):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtValor" promptText="0,00" maxWidth="150.0"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
      </GridPane>
    </content>
  </TitledPane>

  <Button text="Salvar Serviço" onAction="#acaoSalvar"
          style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

</VBox>
